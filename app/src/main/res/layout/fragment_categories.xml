<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#eaeaea"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#427161"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/scanner"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:drawableTop="@drawable/nav_button_scan_nor"
            android:gravity="center"
            android:text="扫一扫"
            android:textColor="#fff"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_biankuang">

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/nav_button_search_nor"/>

            <EditText
                android:background="@null"
                android:id="@+id/et_search"
                android:textColorHint="#fff"
                android:textColor="#fff"
                android:hint="搜索您想要的商品"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:drawableTop="@drawable/nav_button_message_nor"
            android:gravity="center"
            android:text="消息"
            android:textColor="#fff"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:id="@+id/recycler_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>