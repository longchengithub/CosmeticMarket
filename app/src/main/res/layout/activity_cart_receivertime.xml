<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/shop_chanpinlan"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="6dp"
                android:src="@drawable/shop_fanhui"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="选择收货时间"
                android:textColor="#fff"
                android:textSize="25dp"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:textSize="22dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="23dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="送货时间"/>

    <Button
        android:textColor="@color/shop_color_textcolor_selector"
        android:padding="5dp"
        android:background="@drawable/shop_bg_receivertime_selector"
        android:textSize="18dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="双休或工作日均可"/>
    <Button
        android:textColor="@color/shop_color_textcolor_selector"
        android:padding="5dp"
        android:background="@drawable/shop_bg_receivertime_selector"
        android:textSize="18dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="双休或节假日均可"/>

    <Button
        android:textColor="@color/shop_color_textcolor_selector"
        android:padding="5dp"
        android:background="@drawable/shop_bg_receivertime_selector"
        android:textSize="18dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="仅双休日"/>

</LinearLayout>