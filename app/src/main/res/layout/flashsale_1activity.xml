<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_flash_sale"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#427161"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="限时抢购"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </RelativeLayout>
    <com.youth.banner.Banner
        android:id="@+id/fbanner"
        android:layout_width="match_parent"
        android:layout_height="160dp">
    </com.youth.banner.Banner>

    <android.support.v7.widget.ButtonBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <!--<View-->
            <!--android:layout_width="1dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="#427161">-->
        <!--</View>-->
        <Button
            android:button="@null"
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/flashsale_time_selector"
            android:text="10:00"
            android:textColor="@drawable/flashsale_text_selector"/>


        <Button
            android:button="@null"
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/flashsale_time_selector"
            android:text="15:00"
            android:textColor="@drawable/flashsale_text_selector"/>

        <Button
            android:button="@null"
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/flashsale_time_selector"
            android:text="20:00"
            android:textColor="@drawable/flashsale_text_selector"/>

        <Button
            android:button="@null"
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/flashsale_time_selector"
            android:text="明曰预告"
            android:textColor="@drawable/flashsale_text_selector"/>

    </android.support.v7.widget.ButtonBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_flashsale"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>
