<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.market.view.activity.base.LoginActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="login_goBack"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="返回" />

    </LinearLayout>

    <ImageView
        android:id="@+id/login_after"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/after">
    </ImageView>

    <RelativeLayout
        android:padding="10dp"
        android:id="@+id/loginOrsign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:clickable="true"
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/register" />

        <ImageView
            android:layout_marginLeft="180dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sign"
            android:layout_alignTop="@+id/register" />
    </RelativeLayout>
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="90dp"
            android:layout_alignBottom="@+id/loginOrsign"
            android:src="@drawable/phone"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_imageView" />
        <EditText
            android:hint="手机号/Tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/login_imageView"
            android:layout_marginStart="31dp"
            android:padding="5dp"
            android:id="@+id/editText" />
    </RelativeLayout>
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="90dp"
            android:layout_alignBottom="@+id/loginOrsign"
            android:src="@drawable/password"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_password" />
        <EditText
            android:password="true"
            android:hint="密码/Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/login_password"
            android:layout_marginStart="31dp"
            android:padding="5dp"
            android:id="@+id/et_password" />
    </RelativeLayout>
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="90dp"
            android:layout_alignBottom="@+id/loginOrsign"
            android:src="@drawable/code"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/code" />
        <EditText
            android:password="true"
            android:hint="验证码/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/code"
            android:layout_marginStart="31dp"
            android:padding="5dp"
            android:id="@+id/et_code" />
        <ImageView
            android:id="@+id/iv_code"
            android:clickable="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/et_code"
            android:src="@drawable/dianjihuoqumima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ImageView
        android:layout_gravity="center_horizontal"
        android:onClick="click_login"
        android:layout_marginTop="20dp"
        android:src="@drawable/lijizhuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:text="注册即表示我同意和色条款内容"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
