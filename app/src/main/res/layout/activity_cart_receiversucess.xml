<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/shop_chanpinlan"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="6dp"
                android:src="@drawable/shop_fanhui"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="提交成功"
                android:textColor="#fff"
                android:textSize="25dp"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:textSize="17dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您的订单已提交,我们会尽快安排发货"/>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shop_waikuang"
        android:orientation="vertical"
        >
        <TextView
            android:padding="5dp"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="您的订单号是:1057751239082345"/>
        <TextView
            android:padding="5dp"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="支付金额:310.63元"/>
        <TextView
            android:padding="5dp"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="支付方式:在线支付"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shop_waikuang"
        android:orientation="vertical"
        >
        <TextView
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="如有疑问可拨打和色客服热线:400-300-7859"/>
    </LinearLayout>

    <Button
        android:textColor="@color/shop_color_textcolor_selector"
        android:padding="5dp"
        android:background="@drawable/shop_bg_receivertime_selector"
        android:textSize="18dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="继续购物"/>

    <Button
        android:textColor="@color/shop_color_textcolor_selector"
        android:padding="5dp"
        android:background="@drawable/shop_bg_receivertime_selector"
        android:textSize="18dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看订单"/>

</LinearLayout>